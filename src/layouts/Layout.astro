---
import "@/styles/globals.css";
import Footer from "../components/astro/Footer.astro";
import Navigation from "../components/astro/Navigation.astro";
import Header from "../components/astro/Header.astro";
import LangButton from "../components/astro/LangButton.astro";
import { getLangFromUrl } from "../utils/language";

const lang = getLangFromUrl(Astro.url.pathname);

// Add this to debug
console.log("Current pathname:", Astro.url.pathname);

// Modified homepage check to handle trailing slashes
const isHomePage = ["", "/", "/en", "/en/", "/fi", "/fi/"].includes(Astro.url.pathname);
const bodyStyle = isHomePage ? {} : { backgroundColor: "hsl(0 0% 100%)" };
interface Props {
  title: string;
}

const { title } = Astro.props;

const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Websivut yritykselle" />
    <title>{title}</title>
  </head>
  <body style={bodyStyle}>
    <div
      style="position: fixed; top: 0; right: 0; background: black; color: white; padding: 10px; z-index: 9999;"
    >
      Current path: {pathname}
    </div>

    <Header />
    <Navigation lang={lang} />
    <slot />
    <LangButton />
    {!isHomePage && <Footer />}
  </body>
</html>
