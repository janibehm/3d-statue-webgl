---
import "@/styles/globals.css";
import Footer from "../components/astro/Footer.astro";
import Navigation from "../components/astro/Navigation.astro";
import Header from "../components/astro/Header.astro";
import LangButton from "../components/astro/LangButton.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === "/";
const lang = Astro.params.lang || "fi"; // Default to Finnish
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Websivut yritykselle" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <Navigation />
    <slot />
    <LangButton />
    {!isHomePage && <Footer />}
  </body>
</html>
