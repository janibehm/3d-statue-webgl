---
import "@/styles/globals.css";
import Footer from "../components/astro/Footer.astro";
import Navigation from "../components/astro/Navigation.astro";
import Header from "../components/astro/Header.astro";
import LangButton from "../components/astro/LangButton.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === "/";

// Get language from URL or default to Finnish
const urlLang = currentPath.split("/")[1];
const validLangs = ["en", "fi"];
const lang = validLangs.includes(urlLang) ? urlLang : "fi";

// If on homepage and we have a saved language preference, redirect
if (isHomePage) {
  const savedLang = Astro.cookies.get("preferredLanguage")?.value;
  if (savedLang && validLangs.includes(savedLang) && savedLang !== lang) {
    return Astro.redirect(`/${savedLang}`);
  }
}
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Websivut yritykselle" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <Navigation />
    <slot />
    <LangButton />
    {!isHomePage && <Footer />}
    <script>
      // Initialize language preference on page load
      const savedLang = localStorage.getItem("preferredLanguage");
      const currentPath = window.location.pathname;
      const urlLang = currentPath.split("/")[1];

      if (savedLang && savedLang !== urlLang && currentPath !== "/") {
        const newPath = currentPath.replace(/^\/\w+/, `/${savedLang}`);
        window.location.pathname = newPath;
      }
    </script>
  </body>
</html>
