---
import Layout from "../../../layouts/Layout.astro";
import Services from "../../../components/astro/About.astro";

const slugs = {
  en: {
    about: "about",
  },
  fi: {
    about: "tietoa",
  },
};

export async function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "fi" } }];
}

const { lang } = Astro.params;
const currentPath = Astro.url.pathname;
const correctSlug = slugs[lang as keyof typeof slugs].about;
const correctPath = `/${lang}/${correctSlug}`;

// Redirect if we're not on the correct path
if (currentPath !== correctPath) {
  return Astro.redirect(correctPath);
}

/* const translations = await import(`../../../i18n/${lang}.json`); */
---

<Layout title={lang}>
  <Services initialLang={lang} />
</Layout>
