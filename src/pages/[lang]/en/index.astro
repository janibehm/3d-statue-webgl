---
import "@/styles/globals.css";
import Layout from "../../../layouts/Layout.astro";
import Scene3D from "../../../scenes/ThreeScene";
import ScrollContent from "@/components/astro/ScrollContent.astro";

export async function getStaticPaths() {
  return [{ params: { lang: "en", slug: "en" } }, { params: { lang: "fi", slug: "fi" } }];
}

const { lang } = Astro.params;
const translations = await import(`../../../i18n/scrollContent/${lang}.json`);
---

<Layout title="Behm Digital">
  <main>
    <Scene3D client:only="react" />
    <ScrollContent translations={translations.default} />
  </main>
</Layout>
