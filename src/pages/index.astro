// Set default language
const defaultLang = "fi";
const browserLang = Astro.request.headers.get("accept-language")?.split(",")[0].split("-")[0];
const supportedLanguages = ["en", "fi"];

// Use browser language if supported, otherwise fallback to default
const lang = browserLang && supportedLanguages.includes(browserLang) ? browserLang : defaultLang;

return Astro.redirect(`/${lang}`);
