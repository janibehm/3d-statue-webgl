---
import Layout from "../../layouts/Layout.astro";
import Services from "../../components/astro/Services.astro";
import Hero from "../../components/astro/Hero.astro";
const lang = "fi"; // Default to Finnish
const translations = await import(`../../i18n/services/fi.json`);
const heroTranslations = await import(`../../i18n/hero/fi.json`);
---

<Layout title="Behm Digital - Palvelut">
  <Hero heroTranslations={heroTranslations.default.hero} page="services" />
  <Services translations={translations.default} />
</Layout>
