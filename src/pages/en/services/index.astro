---
import Layout from "../../../layouts/Layout.astro";
import Services from "../../../components/astro/Services.astro";
import Hero from "../../../components/astro/Hero.astro";
const heroTranslations = await import(`../../../i18n/hero/en.json`);
const english = await import(`../../../i18n/services/en.json`);
---

<Layout title="Services">
  <Hero heroTranslations={heroTranslations.default.hero} page="services" />
  <Services translations={english.default} />
</Layout>
