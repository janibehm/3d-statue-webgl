---
import { Picture } from "astro:assets";
import jani from "../../images/jani.jpeg";

interface AboutProps {
  translations?: {
    title: string;
    ourApproach: string;
    description: string;
    approach: string;
    maintenanceTitle: string;
    maintenance: string;
    name: string;
    professionalRole: string;
    cta: string;
    contactButton: string;
  };
  lang?: string;
}

const {
  translations = {
    title: "",
    ourApproach: "",
    description: "",
    approach: "",
    maintenanceTitle: "",
    maintenance: "",
    cta: "",
    contactButton: "",
    name: "",
    professionalRole: "",
  },
  lang = "",
}: AboutProps = Astro.props;
---

<div class="bg-black/95">
  <section
    class="relative text-white z-[1] pointer-events-auto
           w-full px-4 mx-auto
           md:w-[55%] md:px-8"
  >
    <div class="py-12 space-y-12 max-w-3xl mx-auto">
      <!-- Description Section -->
      <div>
        <h2 class="text-2xl font-bold mb-4 text-green-400">{translations.title}</h2>
        <p class="text-lg leading-relaxed">
          {translations.description}
        </p>
      </div>

      <!-- Approach Section -->
      <div class="border-l-2 border-green-400 pl-6">
        <h2 class="text-2xl font-bold mb-4 text-green-400">{translations.ourApproach}</h2>
        <p class="text-lg leading-relaxed">
          {translations.approach}
        </p>
      </div>

      <!-- Maintenance Section -->
      <div class="bg-white/5 p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4 text-green-400">{translations.maintenanceTitle}</h2>
        <p class="text-lg leading-relaxed">
          {translations.maintenance}
        </p>
      </div>

      <!-- Profile Image and CTA Section -->
      <div class="flex flex-col md:flex-row items-center gap-8 mt-8">
        <!-- Profile Image with Overlay and Caption -->
        <div class="relative w-full md:w-2/5 text-center">
          <div class="relative">
            <Picture
              src={jani}
              alt="Jani"
              formats={["avif", "webp"]}
              width={300}
              height={400}
              class="rounded-lg shadow-xl w-full"
              style={{
                objectFit: "cover",
                objectPosition: "center top",
              }}
            />
            <div class="absolute inset-0 bg-black/20 rounded-lg"></div>
          </div>
          <div class="mt-4 space-y-1">
            <h3 class="text-xl font-semibold text-green-400">{translations.name}</h3>
            <p class="text-gray-300">{translations.professionalRole}</p>
          </div>
        </div>

        <!-- CTA Section -->
        <div class="flex-1 text-center md:text-left">
          <p class="text-xl font-semibold mb-6">
            {translations.cta}
          </p>
          <button>
            <a
              href={lang === "fi" ? "/yhteydenotto" : "/en/contact"}
              class="inline-block bg-green-400 text-black px-8 py-3 rounded-full
                   hover:bg-green-300 transition-colors duration-300"
            >
              {translations.contactButton}
            </a>
          </button>
        </div>
      </div>
    </div>
  </section>
</div>
