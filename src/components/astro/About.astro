---
interface AboutProps {
  translations?: {
    description: string;
    approach: string;
    maintenance: string;
    cta: string;
  };
}

const {
  translations = {
    description: "",
    approach: "",
    maintenance: "",
    cta: "",
  },
}: AboutProps = Astro.props;
---

<div class="bg-black/95">
  <section
    class="relative text-white z-[1] pointer-events-auto
           w-full px-4 ml-0
           md:w-[38%] md:px-8 md:ml-24"
  >
    <div class="py-8">
      <p class="mb-6">
        {translations.description}
      </p>
      <p class="mb-6">
        {translations.approach}
      </p>
      <p class="mb-6">
        {translations.maintenance}
      </p>
      <p class="mb-6">
        {translations.cta}
      </p>
    </div>
  </section>
</div>
