---
interface AboutProps {
  translations?: {
    title: string;
    ourApproach: string;
    description: string;
    approach: string;
    maintenanceTitle: string;
    maintenance: string;
    cta: string;
    contactButton: string;
  
  };
  lang?: string;
}

const {
  translations = {
    title: "",
    ourApproach: "",
    description: "",
    approach: "",
    maintenanceTitle: "",
    maintenance: "",
    cta: "",
    contactButton: "",
  },
  lang = "",
}: AboutProps = Astro.props;
---

<div class="bg-black/95">
  <section
    class="relative text-white z-[1] pointer-events-auto
           w-full px-4 ml-0
           md:w-[38%] md:px-8 md:ml-24"
  >
    <div class="py-12 space-y-12">
      <!-- Description Section -->
      <div class="fade-in">
        <h2 class="text-2xl font-bold mb-4 text-green-400">{translations.title}</h2>
        <p class="text-lg leading-relaxed">
          {translations.description}
        </p>
      </div>

      <!-- Approach Section -->
      <div class="fade-in border-l-2 border-green-400 pl-6">
        <h2 class="text-2xl font-bold mb-4 text-green-400">{translations.ourApproach}</h2>
        <p class="text-lg leading-relaxed">
          {translations.approach}
        </p>
      </div>

      <!-- Maintenance Section -->
      <div class="fade-in bg-white/5 p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4 text-green-400">{translations.maintenanceTitle}</h2>
        <p class="text-lg leading-relaxed">
          {translations.maintenance}
        </p>
      </div>

      <!-- CTA Section -->
      <div class="fade-in text-center mt-8">
        <p class="text-xl font-semibold mb-6">
          {translations.cta}
        </p>
        <button>
        <a 
          href={lang === "fi" ? "/yhteydenotto" : "/en/contact"}
          class="inline-block bg-green-400 text-black px-8 py-3 rounded-full 
                 hover:bg-green-300 transition-colors duration-300"
        >
          {translations.contactButton}
        </a>
        </button>
      </div>
    </div>
  </section>
</div>

<style>
  .fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-in forwards;
  }

  @keyframes fadeIn {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Stagger the animations */
  .fade-in:nth-child(1) { animation-delay: 0.2s; }
  .fade-in:nth-child(2) { animation-delay: 0.4s; }
  .fade-in:nth-child(3) { animation-delay: 0.6s; }
  .fade-in:nth-child(4) { animation-delay: 0.8s; }
</style>
